{
    email demo@aurora-ai.net
}

{$DOMAIN:localhost} {
    encode gzip
    
    handle /api/auth/session* {
        reverse_proxy frontend:3000
    }
    
    handle /api/auth/providers* {
        reverse_proxy frontend:3000
    }
    
    handle /api/auth/signin* {
        reverse_proxy frontend:3000
    }
    
    handle /api/auth/signout* {
        reverse_proxy frontend:3000
    }
    
    handle /api/auth/callback* {
        reverse_proxy frontend:3000
    }
    
    handle /api/auth/csrf* {
        reverse_proxy frontend:3000
    }
    
    handle /api/* {
        reverse_proxy aurora-server:{$FLASK_PORT:5080}
    }
    
    handle /ws* {
        reverse_proxy chatbot:5006
    }
    
    handle {
        reverse_proxy frontend:3000
    }
}
