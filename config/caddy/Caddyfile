{
    email demo@aurora-ai.net
}

{$DOMAIN:localhost} {
    encode gzip
    
    # WebSocket chatbot
    handle /ws* {
        reverse_proxy chatbot:5006
    }
    
    # Everything else (including all /api/*) goes to frontend
    # Frontend Next.js API routes will proxy to Flask backend internally
    handle {
        reverse_proxy frontend:3000
    }
}
